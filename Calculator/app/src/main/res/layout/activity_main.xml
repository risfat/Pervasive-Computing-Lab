<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    tools:context="com.risfat.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
      android:id="@+id/secondaryTxtView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
        android:layout_marginRight="20dp"
      android:text=""
      android:textSize="25dp"
      android:textStyle="italic"
        android:backgroundTint="@color/purple_500"
      android:layout_weight="1"/>

    <TextView
        android:id="@+id/primaryTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnCe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="â“§"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="operatorFunc"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnMulti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="operatorFunc"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="23dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="operatorFunc"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="operatorFunc"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnPDS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn_color"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="calFunc"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="23dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/purple_500"
            android:onClick="resultFunc"/>


    </LinearLayout>


</LinearLayout>